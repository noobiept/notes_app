<Window x:Class="notes_app.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notes_app"
        mc:Ignorable="d"
        Title="Notes" Height="350" Width="525">
    <Grid Margin="0,0,0.0,0.0">
        <Button x:Name="new_note" Content="New Note" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="newNoteListener"/>
        <TextBox x:Name="textBox" Margin="0,22,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
        <Button x:Name="previous" Content="Previous" HorizontalAlignment="Right" Margin="0,0,80,0" VerticalAlignment="Top" Width="75" Click="previousNoteListener" />
        <Button x:Name="next" Content="Next" HorizontalAlignment="Right" Margin="433,0,0,0" VerticalAlignment="Top" Width="75" Click="nextNoteListener" />
    </Grid>
</Window>
